<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.kidusmt.android.lifeoutsideourapp.MainActivity">

    <Button
        android:layout_marginTop="80dp"
        android:id="@+id/btn_first"
        android:onClick="btnNotifyOnClick"
        android:text="Notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/btn_first"
        android:id="@+id/btn_second"
        android:text="Notify Personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/btn_second"
        android:id="@+id/btn_third"
        android:text="Notify Multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/btn_third"
        android:id="@+id/btn_fourth"
        android:text="Notify Big Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/btn_fourth"
        android:id="@+id/btn_fiveth"
        android:text="Notify Big Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="btnRemoveNotificationOnClick"
        android:id="@+id/btn_sixth"
        android:text="Remove Notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
